{
  "name": "breakpoint-example-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss",
      "standalone": false
    },
    "@schematics/angular:directive": {
      "standalone": false
    },
    "@schematics/angular:pipe": {
      "standalone": false
    }
  },
  "sourceRoot": "examples/angular-app/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "options": {
        "outputPath": "dist/breakpoint-example-angular",
        "index": "examples/angular-app/src/index.html",
        "browser": "examples/angular-app/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "examples/angular-app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "examples/angular-app/public"
          }
        ],
        "styles": [
          "examples/angular-app/src/styles.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "1MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kB",
              "maximumError": "4kB"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "breakpoint-example-angular:build:production"
        },
        "development": {
          "buildTarget": "breakpoint-example-angular:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n"
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "tsConfig": "examples/angular-app/tsconfig.spec.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "examples/angular-app/public"
          }
        ],
        "styles": [
          "examples/angular-app/src/styles.scss"
        ],
        "scripts": []
      }
    }
  }
}
